{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "lib",
    "lib": ["es6"],
    "module": "commonjs",
    "target": "ES2018",
    "sourceMap": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "strict": true, /* enable all strict type-checking options */
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
