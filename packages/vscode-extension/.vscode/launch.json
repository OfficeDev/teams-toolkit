// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "pwa-extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/out/**/*.js",
        "${workspaceFolder}/../fx-core/build/**/*.js",
        "${workspaceFolder}/../api/build/**/*.js"
      ],
      "preLaunchTask": "npm: build"
    },
    {
      "name": "Extension Unit Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/test/index.unit"
      ],
      "outFiles": ["${workspaceFolder}/out/test/**/*.js"],
      "preLaunchTask": "npm: test-watch"
    },
    {
      "name": "Extension Integration Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "${workspaceFolder}/test-folder/myapp",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/test/index.integration"
      ],
      "outFiles": ["${workspaceFolder}/out/test/**/*.js"],
      "preLaunchTask": "npm: test-watch"
    },
    {
      "name": "Extension Tests (Environment Checker)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/test/suite/envChecker/index"
      ],
      "outFiles": ["${workspaceFolder}/out/src/**/*.js", "${workspaceFolder}/out/test/**/*.js"],
      "preLaunchTask": "npm: test-watch",
      "sourceMaps": true
    }
  ]
}
