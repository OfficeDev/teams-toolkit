{
    "$id": "https://copilotstudio.microsoft.com/schemas/plugin-manifest-v2.1.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "schema_version": {
            "type": "string",
            "const": "v2.1"
        },
        "name_for_human": {
            "type": "string"
        },
        "namespace": {
            "type": "string"
        },
        "description_for_model": {
            "type": "string"
        },
        "description_for_human": {
            "type": "string"
        },
        "logo_url": {
            "format": "uri"
        },
        "contact_email": {
            "format": "email"
        },
        "legal_info_url": {
            "format": "uri"
        },
        "privacy_policy_url": {
            "format": "uri"
        },        
        "functions": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/function-object"
            }
        },
        "runtimes": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "#/$defs/runtime-object-localplugin"
                    },
                    {
                        "$ref": "#/$defs/runtime-object-openapi"
                    }
                ]
            }
        },
        "capabilities": {
            "type": "object",
            "properties": {
                "localization": {
                    "$ref": "#/$defs/localization-object"
                },
                "conversation_starters": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/conversation-starter"
                    }
                }
            },
            "propertyNames": {
                "enum": [
                    "localization",
                    "conversation_starters"
                ]
            }
        }
    },
    "required": [
        "schema_version",
        "name_for_human",
        "description_for_human"
    ],
    "propertyNames": {
        "enum": [
            "$schema",
            "schema_version",
            "name_for_human",
            "namespace",
            "description_for_model",
            "description_for_human",
            "logo_url",
            "contact_email",
            "legal_info_url",
            "privacy_policy_url",
            "functions",
            "runtimes",
            "capabilities"
        ]
    },
    "$defs": {
        "function-object": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string",
                    "pattern": "^[A-Za-z0-9_]+$"
                },
                "description": {
                    "type": "string"
                },
                "parameters": {
                    "$ref": "#/$defs/function-parameters"
                },
                "returns": {
                    "oneOf": [
                        {
                            "$ref": "#/$defs/function-return-type"
                        },
                        {
                            "$ref": "#/$defs/function-rich-response-return-type"
                        }
                    ]
                },
                "states": {
                    "type": "object",
                    "properties": {
                        "reasoning": {
                            "$ref": "#/$defs/function-state-config"
                        },
                        "responding": {
                            "$ref": "#/$defs/function-state-config"
                        },
                        "disengaging": {
                            "$ref": "#/$defs/function-state-config"
                        },
                        "Reasoning": {
                            "$ref": "#/$defs/function-state-config"
                        },
                        "Responding": {
                            "$ref": "#/$defs/function-state-config"
                        },
                        "Disengaging": {
                            "$ref": "#/$defs/function-state-config"
                        }

                    },
                    "propertyNames": {
                        "enum": [
                            "reasoning",
                            "responding",
                            "disengaging",
                            "Reasoning",
                            "Responding",
                            "Disengaging"

                        ]
                    }
                },
                "capabilities": {
                    "type": "object",
                    "properties": {
                        "confirmation": {
                            "$ref": "#/$defs/confirmation-object"
                        },
                        "response_semantics": {
                            "$ref": "#/$defs/response-semantics-object"
                        }
                    },
                    "propertyNames": {
                        "enum": [
                            "confirmation",
                            "response_semantics"
                        ]
                    }
                }
            },
            "required": [
                "name"
            ],
            "propertyNames": {
                "enum": [
                    "id",
                    "name",
                    "description",
                    "parameters",
                    "returns",
                    "states",
                    "capabilities"
                ]
            }
        },
        "response-semantics-object": {
            "type": "object",
            "properties": {
                "data_path": {
                    "type": "string"
                },
                "properties": {
                    "type": "object",
                    "properties":{
                        "title": {
                            "type": "string"
                        },
                        "subtitle": {
                            "type": "string"
                        },
                        "url": {
                            "type": "string"
                        },
                        "information_protection_url": {
                            "type": "string"
                        },
                        "template_selector": {
                            "type": "string"
                        }
                    },
                    "propertyNames": {
                        "enum": [
                            "title",
                            "subtitle",
                            "url",
                            "information_protection_url",
                            "template_selector"
                        ]
                    }
                },
                "static_template": {
                    "type": "object"
                },
                "oauth_card_path": {
                    "type": "string"
                }
            },
            "required": [ "data_path" ],
            "propertyNames": {
                "enum": [
                    "data_path",
                    "properties",
                    "static_template",
                    "oauth_card_path"
                ]
            }

        },
        "conversation-starter": {
            "type": "object",
            "properties": {
                "text": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            },
            "required": [
                "text"
            ],
            "propertyNames": {
                "enum": [
                    "text",
                    "title"
                ]
            }
        },
        "runtime-object-openapi": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "OpenApi"
                },
                "auth": {
                    "$ref": "#/$defs/auth-object"
                },
                "run_for_functions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "spec": {
                    "title": "OpenApi runtime",
                    "type": "object",
                    "properties": {
                        "url": {
                            "type": "string"
                        },
                        "api_description": {
                            "type": ["string"]
                        },
                        "progress_style": {
                            "type": "string",
                            "enum": [
                                "None",
                                "ShowUsage",
                                "ShowUsageWithInput",
                                "ShowUsageWithInputAndOutput"
                            ]
                        }
                    }
                }
            },
            "required": [
                "type",
                "spec"
            ],
            "propertyNames": {
                "enum": [
                    "type",
                    "auth",
                    "run_for_functions",
                    "spec"
                ]
            }
        },
        "auth-object": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "None",
                        "OAuthPluginVault",
                        "ApiKeyPluginVault"
                    ]
                },
                "Type": {
                    "type": "string",
                    "enum": [
                        "None",
                        "OAuthPluginVault",
                        "ApiKeyPluginVault"
                    ]
                },                
                "reference_id": {
                    "type": "string"
                }
            },
            "propertyNames": {
                "enum": [
                    "type",
                    "Type",
                    "reference_id"
                ]
            }
        },
        "runtime-object-localplugin": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "LocalPlugin"
                },
                "run_for_functions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "spec": {
                    "title": "localPlugin runtime",
                    "type": "object",
                    "properties": {
                        "local_endpoint": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "local_endpoint"
                    ]
                }
            },
            "required": [
                "type",
                "spec"
            ],
            "propertyNames": {
                "enum": [
                    "type",
                    "run_for_functions",
                    "spec"
                ]
            }
        },
        "localization-object": {
            "type": "object",
            "patternProperties": {
                "/^[a-z]{2,3}(-[a-z]{2})?$/ui": {
                    "type": "object",
                    "patternProperties": {
                        "^[A-Za-z_][A-Za-z0-9_]*$": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "message",
                                "description"
                            ],
                            "propertyNames": {
                                "enum": [
                                    "message",
                                    "description"
                                ]
                            }
                        }
                    }
                }
            }
        },
        "function-parameters": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "object"
                },
                "properties": {
                    "type": "object",
                    "patternProperties": {
                        "^[A-Za-z0-9_]+$": {
                            "$ref": "#/$defs/function-parameter"
                        }
                    }
                },
                "required": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "properties"
            ],
            "propertyNames": {
                "enum": [
                    "type",
                    "properties",
                    "required"
                ]
            }
        },
        "function-parameter": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "string",
                        "array",
                        "boolean",
                        "integer",
                        "number"
                    ]
                },
                "items": {
                    "$recursiveRef": "#/$defs/function-parameter"
                },
                "enum": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "description": {
                    "type": "string"
                },
                "default": {
                    "type": ["string","boolean","integer","number","array"]
                }
            },
            "required": [
                "type"
            ],
            "propertyNames": {
                "enum": [
                    "type",
                    "items",
                    "enum",
                    "description",
                    "default"
                ]
            }
        },
        "function-return-type": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "string"
                    ]
                },
                "description": {
                    "type": "string"
                }
            },
            "required": [
                "type"
            ],
            "propertyNames": {
                "enum": [
                    "type",
                    "description"
                ]
            }
        },
        "function-rich-response-return-type": {
            "type": "object",
            "properties": {
                "$ref": {
                    "type": "string",
                    "const": "https://copilot.microsoft.com/schemas/rich-response-v1.0.json"
                }
            },
            "required": [
                "$ref"
            ],
            "propertyNames": {
                "enum": [
                    "$ref"
                ]
            }
        },
        "instruction": {
            "type": [
                "string",
                "array"
            ],
            "items": {
                "type": "string"
            }
        },
        "example": {
            "type": [
                "string",
                "array"
            ],
            "items": {
                "type": "string"
            }
        },
        "function-state-config": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "instructions": {
                    "$ref": "#/$defs/instruction"
                },
                "examples": {
                    "$ref": "#/$defs/example"
                }
            },
            "propertyNames": {
                "enum": [
                    "description",
                    "instructions",
                    "examples"
                ]
            }
        },
        "confirmation-object": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "None",
                        "AdaptiveCard"
                    ]
                },
                "title": {
                    "type": "string"
                },
                "body": {
                    "type": "string"
                }
            },
            "propertyNames": {
                "enum": [
                    "type",
                    "title",
                    "body"
                ]
            }
        }
    }
}