// This file is automatically generated by Teams Toolkit.
// The teamsfx tasks defined in this file require Teams Toolkit version >= 5.0.0.
// See https://aka.ms/teamsfx-tasks for details on how to customize each task.
{
    "version": "2.0.0",
    "tasks": [
        {
            // Check if all required prerequisites.
            // See https://aka.ms/teamsfx-tasks/check-prerequisites to know the details and how to customize the args.
            "label": "Validate prerequisites",
            "type": "teamsfx",
            "command": "debug-check-prerequisites",
            "args": {
                "prerequisites": [
                    "nodejs", // Validate if Node.js is installed.
                    "m365Account", // Sign-in prompt for Microsoft 365 account, then validate if the account enables the sideloading permission.
                    "portOccupancy" // Validate available ports to ensure those debug ones are not occupied.
                ],
                "portOccupancy": [
                    54000, // tab service port
                ]
            }
        },
        {
            // Create the debug resources.
            // See https://aka.ms/teamsfx-tasks/provision to know the details and how to customize the args.
            "label": "Provision",
            "type": "teamsfx",
            "command": "provision",
            "args": {
                "env": "dev"
            }
        },
        {
            "label": "Launch mock",
            "dependsOn": [
                "Validate prerequisites",
                "Prepare data and config",
                "Check dev proxy",
                "Start dev proxy",
                "Start local tunnel",
                "Provision",
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Prepare data and config",
            "type": "shell",
            "command": "node script/prepare.js",
        },
        {
            "label": "Check dev proxy",
            "type": "shell",
            "command": "node check.js",
            "options": {
              "cwd": "${workspaceFolder}/proxy"
            },
        },
        {
            "label": "Start dev proxy",
            "type": "shell",
            "command": "npm run proxy:teamsfx",
            "isBackground": true,
            "options": {
              "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
              "pattern": {
                "regexp": "^.*$",
                "file": 1,
                "location": 1,
                "message": 1
              },
              "background": {
                "activeOnStart": true,
                "beginsPattern": ".*",
                "endsPattern": "^.*(recording).*$"
              }
            }
        },
        {
            // Start the local tunnel service to forward public URL to local port and inspect traffic.
            // See https://aka.ms/teamsfx-tasks/local-tunnel for the detailed args definitions.
            "label": "Start local tunnel",
            "type": "teamsfx",
            "command": "debug-start-local-tunnel",
            "args": {
                "type": "dev-tunnel",
                "ports": [
                    {
                        "portNumber": 54000,
                        "protocol": "http",
                        "access": "public",
                        "writeToEnvironmentFile": {
                            "endpoint": "BOT_ENDPOINT", // output tunnel endpoint as BOT_ENDPOINT
                            "domain": "BOT_DOMAIN" // output tunnel domain as BOT_DOMAIN
                        }
                    }
                ],
                "hostHeader": "dev-proxy-mock",
                "env": "dev"
            },
            "isBackground": true,
            "problemMatcher": "$teamsfx-local-tunnel-watch"
        },
    ]
}
